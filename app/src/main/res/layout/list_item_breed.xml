<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayoutBreederRoot"
    android:paddingTop="8dp"
    android:paddingBottom="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/textViewCounterRound"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center|start"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="รอบที่ : 1"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_edittext_gray_boarder"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="สัปดาห์" />

                <EditText
                    android:id="@+id/breed_week"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center"
                    android:inputType="number"
                    android:paddingStart="6dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_edittext_gray_boarder"
            android:padding="6dp">

            <TextView
                android:id="@+id/textViewDayOfBreed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="วันที่ผสม" />

            <TextView
                android:id="@+id/breed_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/textViewDayOfBreed"
                android:layout_toStartOf="@+id/imageViewCalendarDayOfBreed"
                android:gravity="center|end"
                tools:text="00/00/000" />

            <ImageView
                android:id="@+id/imageViewCalendarDayOfBreed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingStart="16dp"
                android:src="@drawable/ic_calendar" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="28dp"
            android:background="@color/color_menu_divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center|start"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="พ่อพันธุ์"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_edittext_gray_boarder"
                android:orientation="horizontal"
                android:padding="6dp">

                <EditText
                    android:id="@+id/breeder_a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center"
                    android:hint="0"
                    android:inputType="number"
                    android:paddingStart="6dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_edittext_gray_boarder"
                android:orientation="horizontal"
                android:padding="6dp">

                <EditText
                    android:id="@+id/breeder_b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center"
                    android:hint="0"
                    android:inputType="number"
                    android:paddingStart="6dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_edittext_gray_boarder"
                android:orientation="horizontal"
                android:padding="6dp">

                <EditText
                    android:id="@+id/breeder_c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center"
                    android:hint="0"
                    android:inputType="number"
                    android:paddingStart="6dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_edittext_gray_boarder"
            android:padding="6dp">

            <TextView
                android:id="@+id/textViewDOB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="กำหนดคลอด" />

            <TextView
                android:id="@+id/delivery_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/textViewDOB"
                android:layout_toStartOf="@+id/imageViewCalendar"
                android:gravity="center|end"
                tools:text="00/00/000" />

            <ImageView
                android:id="@+id/imageViewCalendar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingStart="16dp"
                android:src="@drawable/ic_calendar" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>