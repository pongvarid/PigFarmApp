<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PigIDActivity">

    <RelativeLayout
        android:id="@+id/toolbarAddBreed"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Pig ID"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp">

            <TextView
                android:id="@+id/textViewInsertCode"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="16dp"
                android:background="@drawable/selector_button_menu"
                android:clickable="true"
                android:gravity="center|start"
                android:paddingStart="12dp"
                android:text="1 กรอกเอง"
                android:textColor="@color/color_white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewScanBarCode"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="16dp"
                android:background="@drawable/selector_button_menu"
                android:clickable="true"
                android:gravity="center|start"
                android:paddingStart="12dp"
                android:text="2 สแกนบาร์โค้ด"
                android:textColor="@color/color_white"
                android:textSize="20dp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>